<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.v7.widget.CardView
        android:id="@+id/requestcard"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"

                android:layout_width="65dp"
                android:src="@drawable/myrequest"
                android:layout_height="65dp" />

           <!-- <TextView

                android:id="@+id/text"
                android:layout_marginTop="15dp"
                android:text="(null) has requested (null) units of (null) blood at (null)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/image"/>-->
            <LinearLayout
                android:id="@+id/liner1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="94dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(null)"/>

                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/idrequest"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(null)"/>

                <TextView
                    android:textSize="16dp"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(null)"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="has requested"/>

                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(null)"/>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner2"
                android:layout_below="@id/liner1"
                android:layout_marginTop="-5dp"
                android:layout_width="wrap_content"
                android:paddingLeft="90dp"
                android:layout_height="wrap_content">


                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="units of"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/blood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(null)"/>

                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="blood at"/>

                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(null)"/>

            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/liner2"
                android:layout_marginTop="-5dp"
                android:layout_width="wrap_content"
                android:paddingLeft="90dp"
                android:layout_height="wrap_content">



            </LinearLayout>
            <ImageView
                android:id="@+id/dots"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:src="@drawable/dot"
                android:layout_marginRight="10dp"
                android:layout_height="30dp" />

            <LinearLayout
                android:id="@+id/linercallrequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/callimg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="53dp"
                    android:src="@drawable/tel" />

                <TextView
                    android:id="@+id/calltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="53dp"
                    android:text="Call"
                    android:textColor="#ff502d"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linersharerequest"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="212dp"
                tools:ignore="NotSibling">

                <ImageView
                    android:id="@+id/shareimg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="53dp"
                    android:src="@drawable/share" />

                <TextView
                    android:id="@+id/sharetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="53dp"
                    android:text="Share"
                    android:textColor="#4d9be8"
                    android:textSize="18dp" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>