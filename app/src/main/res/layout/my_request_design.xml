<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="65dp"
                  android:src="@drawable/myrequest"
                android:layout_height="65dp" />

            <!-- <TextView

                 android:id="@+id/text"
                 android:layout_marginTop="15dp"
                 android:text="(null) has requested (null) units of (null) blood at (null)"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="40dp"
                 android:textSize="15dp"
                 android:layout_marginLeft="5dp"
                 android:textColor="@color/black"
                 android:layout_toRightOf="@id/image"/>-->
            <LinearLayout
                android:id="@+id/liner1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="94dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_id"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You requested"/>

                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You requested"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(null)"/>

                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="units of"/>





            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner2"
                android:layout_below="@id/liner1"
                android:layout_marginTop="-5dp"
                android:layout_width="wrap_content"
                android:paddingLeft="99dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/blood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(null)"/>

                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="blood at"/>



                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(null)"/>

            </LinearLayout>
</RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>