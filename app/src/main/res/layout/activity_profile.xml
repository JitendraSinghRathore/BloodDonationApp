<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/userp"
    android:background="#f2f2f2"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_profile" />
<LinearLayout
    android:id="@+id/linearprofile"
    android:layout_width="match_parent"
    android:layout_height="140dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/proimage"
        android:layout_width="109dp"
        android:layout_marginLeft="131dp"
        android:layout_gravity="center"
        android:src="@drawable/myrequest"
        android:layout_height="109dp" />
</LinearLayout>


    <LinearLayout
        android:layout_below="@id/linearprofile"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FFF"
        android:layout_marginTop="155dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:gravity="center"
            android:text="id"/>

        <TextView
            android:layout_marginTop="12dp"
            android:id="@+id/proname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:gravity="center"
            android:text="Full Name"/>

        <TextView
            android:id="@+id/problood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="Blood Group"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/promobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:maxLength="12"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="Mobile Number"/>
        <TextView
            android:id="@+id/proemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="Email Address"/>
        <TextView
            android:id="@+id/procontry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:text="Country"/>
        <TextView
            android:id="@+id/prostate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="State"/>
        <TextView
            android:id="@+id/procity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="City"/>




    </LinearLayout>
</RelativeLayout>